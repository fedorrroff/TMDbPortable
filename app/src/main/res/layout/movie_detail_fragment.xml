<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/color_blue_300"
    android:id="@+id/fragment_movie"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_poster_detail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_detail"/>

    <TextView
        android:id="@+id/tv_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="@dimen/headline_text_size"
        app:layout_constraintLeft_toRightOf="@id/tv_rating"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_detail"
        android:layout_marginLeft="8dp"
        android:text="TITLE EXMAPLE"/>

    <TextView
        android:id="@+id/tv_description_detail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tv_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_title_detail"
        tools:text="DESC EXMPLE"/>

    <ImageButton
        android:id="@+id/ib_youtube"
        android:foreground="@drawable/youtube"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_description_detail">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>