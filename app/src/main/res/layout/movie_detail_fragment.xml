<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/color_gray_200"
    android:id="@+id/fragment_movie"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_background_detail"
        android:layout_width="421dp"
        android:layout_height="254dp"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_poster_detail"
        android:layout_width="133dp"
        android:layout_height="183dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_poster_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_detail" />

    <TextView
        android:id="@+id/tv_title_detail"
        android:layout_width="226dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:gravity="left"
        android:text="TITLE EXMAPLE"
        android:textColor="@android:color/black"
        android:textSize="@dimen/headline_text_size"
        app:layout_constraintStart_toEndOf="@+id/iv_poster_detail"
        app:layout_constraintTop_toTopOf="@+id/iv_poster_detail" />

    <TextView
        android:id="@+id/tv_description_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_poster_detail"
        tools:text="DESC EXMPLE" />

    <ImageButton
        android:id="@+id/ib_youtube"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="64dp"
        android:foreground="@drawable/youtube"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description_detail"></ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>